<div class="container">
  <h1>User #<%= @user.id %> <%= @user.name %></h1>


  <div>
    <strong>Name</strong>:<br />
    <p><%= @user.name %></p>
  </div>
  <div>
    <strong>Email</strong>:<br />
    <p><%= @user.email %></p>
  </div>
  <div>
    <strong>Bookmarks</strong><br />
  <ul>
    <% @bookmarks.each do |bookmark| %>
    <li><a href="/bookmarks/<%= bookmark.id %>"><%= bookmark.name %></li>
  
    <% end %>
  </ul>
  
  </div>

  <a href="/users">Home | </a>
  <a href="/users/<%= @user.id %>/edit">Edit</a> |
  <a href="/users/<%= @user.id %>/destroy">Destroy</a>
</div>
