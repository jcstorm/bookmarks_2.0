<div class="container">
<h1>Users</h1>

<p><a href="/new_user">Add a New User</a></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><a href="/users/<%= user.id %>"><span class="label label-success">Show</a>
        </td>
      <td><a href="/users/<%= user.id %>/edit"><span class="label label-warning">Edit</span></a></td>
      <td><a href="/users/<%= user.id %>/destroy"><span class="label label-danger">Destroy</span></a></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>

